{
  "seed": 0,
  "network_type": "tdnn",
  "last_layer_no_bn": false,
  "last_layer_linear": true,
  "feature_norm": false,

  "loss_func": "generalized_angular_triplet_loss",
  "triplet_center": "average",
  "triplet_center_momentum": 0.99,
  "loss_compute": "softplus",
  "margin": 0.1,

  assert params.triplet_center == "learnable" or params.triplet_center == "average"
    assert params.loss_compute == "raw" or params.loss_compute == "softplus"
    params.triplet_center_momentum = float(params.triplet_center_momentum)
    params.margin = float(params.margin)
    params.triplet_topn = int(params.triplet_topn)
    params.center_loss_weight = float(params.center_loss_weight)
    params.between_loss_weight = float(params.between_loss_weight)

  "noupdate_var_list": [],
  "noload_var_list": [],

  "batch_type": "softmax",
  "pooling_type": "statistics_pooling",
  "embedding_node": "output",

  "learning_rate": 0.0001,
  "use_nesterov": false,
  "clip_gradient": false,
  "clip_gradient_norm": 3,

  "weight_l2_regularizer": 1e-5,
  "batchnorm_momentum": 0.99,

  "num_epochs": 100,
  "num_steps_per_epoch": 30000,
  "show_training_progress": 200,
  "keep_checkpoint_max": 100,
  "save_summary_steps": 10000,
  "save_checkpoints_steps": 30000,
  "valid_max_iterations": 1000,

  "num_parallel_datasets": 8,
  "max_queue_size": 10,
  "num_speakers_per_batch": 64,
  "num_segments_per_speaker": 1,
  "min_segment_len": 200,
  "max_segment_len": 400,

  "reduce_lr_epochs": 4,
  "early_stop_epochs": 10,
  "min_learning_rate": 1e-6
}