{
  "seed": 0,
  "network_type": "tdnn",
  "last_layer_linear": true,
  "loss_func": "asoftmax",
  "exclude_params_list": ["softmax"],

  "asoftmax_m": 1,
  "asoftmax_lambda_min": 5,
  "asoftmax_lambda_base": 0,
  "asoftmax_lambda_gamma": 1,
  "asoftmax_lambda_power": 1,
